<Window x:Class="Raiders_2._1.MissionAdvance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Raiders_2._1"
        mc:Ignorable="d"
        Title="Mission" Height="450" Width="800" Icon="Resources/Icon.ico" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/Background3.jpg"/>
        </Grid.Background>

        <TextBlock x:Name="TextBlockTitle" Grid.Row="0" Text="Raid of Lindisfarne" Foreground="#FFFF1C1C" FontSize="70" FontFamily="Norse Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock x:Name="TextBlockContent"  Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="19" TextWrapping="WrapWithOverflow"/>
        <Button x:Name="ButtonConfirm" Grid.Row="2" Content="I understand." HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Norse Bold" FontSize="40" Click="ButtonConfirm_Click"/>
    </Grid>
</Window>
