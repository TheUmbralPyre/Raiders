<Window x:Class="Raiders_2._1.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Raiders_2._1"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="600" WindowStartupLocation="CenterScreen" Icon="Resources/Icon.ico">
    <Window.Background>
        <ImageBrush ImageSource="Resources/Background3.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Raiders" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="120" Grid.Row="0" FontFamily="Norse" Foreground="White"/>
        <Button x:Name="ButtonPlay" Content="Play" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Norse" FontSize="50" Grid.Row="1" Margin="147,25.6,147.6,25.2" Width="299" Click="ButtonPlay_Click"/>
        <Button x:Name="ButtonExit" Content="Exit" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Norse" FontSize="50" Grid.Row="2" Margin="147,25.6,147.6,25.2" Width="299" Click="ButtonExit_Click"/>
    </Grid>
</Window>
